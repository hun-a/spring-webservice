{{>layout/header}}

<h1>Starting Web Service with Spring Boot</h1>
<div class="col1-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/posts/save" role="button" class="btn btn-primary">Register</a>
        </div>
    </div>
    <br>
    <!-- List of Posts -->
    <table class="table table0horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>No</th>
            <th>Title</th>
            <th>Author</th>
            <th>Last modified</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
</div>
{{>layout/footer}}